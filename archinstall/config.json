#for VM
{
   "additional-repositories": [
       "multilib"
   ],
   "archinstall-language": "English",
   "audio": "pipewire",
   "bootloader": "grub-install",
   "config_version": "2.4.0-dev0",
   "debug": false,
   "desktop-environment": "kde",
   "gfx_driver": "All open-source (default)",
   "harddrives": [
       "/dev/vda"
   ],
   "hostname": "archlinux",
   "kernels": [
       "linux"
   ],
   "keyboard-layout": "be-latin1",
