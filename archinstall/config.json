       "Belgium": {
           "http://archlinux.cu.be/$repo/os/$arch": true,
           "http://archlinux.mirror.kangaroot.net/$repo/os/$arch": true,
           "http://mirror.tiguinet.net/arch/$repo/os/$arch": true
       }
   },
   "mount_point": null,
   "nic": {
       "NetworkManager": true,
       "type": "network_manager"
   },
   "ntp": true,
   "packages": [
       "firefox",
       "neovim",
       "htop",
       "neofetch",
       "git",
       "tmux",
       "ranger",
       "zsh"
   ],
   "plugin": null,
   "profile": {
       "path": "/home/pugnace/archinstall/archinstall/profiles/desktop.py"
   },
   "script": "guided",
   "silent": false,
   "swap": true,
   "sys-encoding": "utf-8",
   "sys-language": "en_US",
   "timezone": "Europe/Brussels",
   "version": "2.4.0-dev0"                                                                                                                                                                                                                  
}                                                                                                                                                                                                                                            
